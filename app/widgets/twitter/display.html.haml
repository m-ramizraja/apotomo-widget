= widget_div do
  %ul.dragable-list
    - for tweet in children do
      %li.loveable
        = render_widget tweet
  %p
    What are you up to?
  = form_tag url_for_event(:submit), :remote => true do
    = text_field_tag 'text'
    = submit_tag "Tweet!"

:javascript
  $(".dragable-list li").draggable({
    revert: "invalid"
  })

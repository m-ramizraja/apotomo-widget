%ul.dragable-list
  - for tweet in tweets
    %li{:id => widget_id, 'data-id' => tweet.id, 'data-event-url' => url_for_event(:heart)}
      %span
        = tweet.text
      %span
        - if tweet.loved?
          = image_tag "heart.png"
        - else
          = image_tag "heart-faded.png"

:javascript
  $(".dragable-list li").draggable({
    revert: "invalid"
  })
